<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300px"
        android:background="@drawable/shape_pop_you">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/you_aul"
            android:layout_width="match_parent"
            android:layout_height="243px"
            android:layout_marginTop="2px"
            android:background="@drawable/shape_pop_you">

            <ImageView
                android:id="@+id/pop_img"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27px"
                android:layout_marginRight="27px"
                android:scaleType="fitXY"
                android:src="@drawable/tb5" />

            <TextView
                android:id="@+id/pop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pop_img"
                android:layout_marginTop="20px"
                android:layout_toEndOf="@+id/pop_img"
                android:layout_toRightOf="@+id/pop_img"
                android:text="昵称"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/pop_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pop_img"
                android:layout_alignLeft="@+id/pop_name"
                android:layout_marginBottom="10px"
                android:src="@drawable/tb24" />

            <TextView
                android:id="@+id/pop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pop_name"
                android:layout_below="@+id/pop_name"
                android:layout_centerVertical="true"
                android:layout_marginTop="20px"
                android:text="不想表达"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:id="@+id/you_view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/you_aul"
            android:background="#EAEAEA" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/you_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_clenal"
                android:layout_width="0dp"
                android:layout_height="110px"
                android:layout_below="@+id/you_view2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="45px"
                android:layout_gravity="center_vertical"
                android:background="@color/color_eb" />

            <TextView
                android:id="@+id/pop_attention"
                android:layout_width="0dp"
                android:layout_height="110px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="45px"
                android:layout_gravity="center_vertical"
                android:background="@color/color_eb" />

            <TextView
                android:id="@+id/pop_chat"
                android:layout_width="0dp"
                android:layout_height="110px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开聊"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>